<Window x:Class="CloudExtension.InputNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CloudExtension"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Input name" Height="110" Width="300">
    <StackPanel>
        <TextBox Height="20" Margin="10" Text="{Binding Text}"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0">
            <Button Click="Submit_Click" Padding="20,2" Margin="10,0">Submit</Button>
            <Button Click="Cancel_Click" Padding="20,2">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
