<Window x:Class="CloudExtension.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CloudExtension"
        mc:Ignorable="d"
        Title="New account" Height="240" Width="350"
        ResizeMode="CanMinimize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBlock VerticalAlignment="Center" Margin="5" Grid.Row="0">E-mail</TextBlock>
        <TextBox x:Name="email" Margin="5" Grid.Row="0" Grid.Column="1"/>
        <TextBlock VerticalAlignment="Center" Margin="5" Grid.Row="1">Password</TextBlock>
        <PasswordBox x:Name="password" Margin="5" Grid.Row="1" Grid.Column="1"/>
        <TextBlock VerticalAlignment="Center" Margin="5" Grid.Row="2">Confirm password</TextBlock>
        <PasswordBox x:Name="conf_password" Margin="5" Grid.Row="2" Grid.Column="1"/>
        <Button Margin="5" Grid.Row="3" Grid.Column="1" Width="100" HorizontalAlignment="Right" Click="Register_Click">Sign up</Button>

        <TextBlock VerticalAlignment="Center" Margin="5" Grid.Row="4">Confirm code</TextBlock>
        <TextBox x:Name="code" Margin="5" Grid.Row="4"  Grid.Column="1"/>
        <Button Margin="5" Grid.Row="5" Grid.Column="1" Width="100" HorizontalAlignment="Right" Click="Confirm_Click">Confirm</Button>
    </Grid>
</Window>
